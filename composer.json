{
  "name": "wearesho-team/wearesho-notifications-repository",
  "type": "library",
  "license": "Proprietary",
  "authors": [
    {
      "name": "Beton",
      "email": "aleksa.yagich@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "guzzlehttp/guzzle": "^6.3",
    "horat1us/environment-config": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Notifications\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Notifications\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit"
  }
}
